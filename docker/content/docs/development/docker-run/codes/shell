{{% bs/toggle-item "Unix-like" %}}
```sh
docker run -it \
  -v ${PWD}:/src \
  -v ${HOME}/hugo_cache:/tmp/hugo_cache \
  hugomods/hugo:exts-non-root \
  /bin/sh
```
{{% /bs/toggle-item %}}

{{% bs/toggle-item "Windows PowerShell" %}}
```sh
docker run -it `
  -v ${PWD}:/src `
  -v ${HOME}/hugo_cache:/tmp/hugo_cache `
  hugomods/hugo:exts-non-root `
  /bin/sh
```
{{% /bs/toggle-item %}}

